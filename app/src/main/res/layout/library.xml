<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <TextView
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:id="@+id/libraryhours"
        android:layout_gravity="right"
        android:layout_weight="0.21"
        android:textAlignment="center"
        android:text="hey"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ff267cff"
      />
    <SearchView
            android:id="@+id/search_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewt"
            android:layout_weight="0.75"
            tools:listitem="@android:layout/activity_list_item"
            android:choiceMode="multipleChoiceModal"
            android:fastScrollEnabled="true"

            android:scrollbarAlwaysDrawVerticalTrack="true"/>


           />


    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/LibTwitButton"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/twitter_t_icon"
                android:layout_marginRight="10dp"

                />
    <ImageButton
            android:id="@+id/LibFbButton"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/LibTwitButton"
            android:background="@drawable/fb_icon"

          />



    </RelativeLayout>

</LinearLayout>